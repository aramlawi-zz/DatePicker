<?xml version="1.0" encoding="utf-8" ?>
<widget id="DatePicker.widget.DatePicker" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>DatePicker</name>
    <description>The description of this widget.</description>

    <icon></icon>
    <properties>
        <!-- SETUP -->
        <property key="monthNotation" type="enumeration" defaultValue="long">
            <caption>Month notation</caption>
            <category>Setup</category>
            <description>Long (Januari) or short (Jan) display of the month</description>
            <enumerationValues>
                <enumerationValue key="long">Long</enumerationValue>
                <enumerationValue key="short">Short</enumerationValue>
            </enumerationValues>
        </property>
        <property key="dateOrder" type="enumeration" defaultValue="dmy">
            <caption>Date order</caption>
            <category>Setup</category>
            <description>The order of appearance of the inputfields</description>
            <enumerationValues>
                <enumerationValue key="dmy">DD/MM/YYYY</enumerationValue>
                <enumerationValue key="mdy">MM/DD/YYYY</enumerationValue>
                <enumerationValue key="ymd">YYYY/MM/DD</enumerationValue>
            </enumerationValues>
        </property>
        <property key="inputFieldsSetup" type="enumeration" defaultValue="idi">
            <caption>Date display</caption>
            <category>Setup</category>
            <description>Display of date input fields</description>
            <enumerationValues>
                <enumerationValue key="ddi">Drop down DD + MM inputfield for YYYY</enumerationValue>
                <enumerationValue key="idi">Drop down MM inputfield for DD + YYYY</enumerationValue>
                <enumerationValue key="iii">Input fields DD + MM + YYYY</enumerationValue>
            </enumerationValues>
        </property>
        <!-- APPEARANCE SETUP -->
        <property key="language" type="enumeration" defaultValue="nl">
            <caption>Date language</caption>
            <category>Appearance</category>
            <description>Language of date</description>
            <enumerationValues>
                <enumerationValue key="nl">Dutch</enumerationValue>
                <enumerationValue key="en">English</enumerationValue>
                <enumerationValue key="ger">German</enumerationValue>
                <enumerationValue key="fra">French</enumerationValue>
            </enumerationValues>
        </property>
        <property key="orientation" type="enumeration" defaultValue="horizontal">
            <caption>Form orientation</caption>
            <category>Appearance</category>
            <description>Orientation of form</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="attributeLabel" type="string" >
            <caption>Label</caption>
            <category>Appearance</category>
            <description>String to appear as label</description>
        </property>
        <property key="labelwidth" type="integer" defaultValue="4">
            <caption>Width of label</caption>
            <category>Appearance</category>
            <description>The width of the label. For layout to function properly this should be a value between 1 and 11. This value will only be used if form orientation is Horizontal.</description>
        </property>
        <!-- INPUT SETUP -->
        <property key="futureYear" type="boolean" defaultValue="false">
            <caption>Date can be in future?</caption>
            <category>Input</category>
            <description>If no is selected, year can only be current year or lower.</description>
        </property>
        <property key="attributeName" type="attribute">
            <caption>Date attribute</caption>
            <category>Input</category>
            <description>DateTime attribute</description>
            <attributeTypes>
                <attributeType name="DateTime" />
            </attributeTypes>
        </property>
        <!-- ERROR LABELS -->
        <property key="errorDay" type="string" >
            <caption>Day not valid</caption>
            <category>Errors</category>
            <description>String to appear as error when day is not correct</description>
        </property>
        <property key="errorMonth" type="string" >
            <caption>Month not valid</caption>
            <category>Errors</category>
            <description>String to appear as error when month is not correct</description>
        </property>
        <property key="errorYear" type="string" >
            <caption>Year not valid</caption>
            <category>Errors</category>
            <description>String to appear as error when year is not correct</description>
        </property>
        <property key="errorDate" type="string" >
            <caption>Date not valid</caption>
            <category>Errors</category>
            <description>String to appear as error when date is not correct e.g. 31 feb 2000</description>
        </property>
    </properties>
</widget>
